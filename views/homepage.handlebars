    >
      {{! slide show attempt }}
      <div>
        <ul class="cb-slideshow">
          <li>
            <span> </span>
          </li>
          <li>
            <span> </span>
          </li>
          <li>
            <span> </span>
          </li>
          <li>
            <span> </span>
          </li>
          <li>
            <span> </span>
          </li>
          <li>
            <span> </span>
          </li>
          <li>
