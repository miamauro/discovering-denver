<div
  class="welcome-card container-fluid d-flex flex-column flex-wrap justify-content-center align-items-start align-items-sm-center col-12 mb-5"
>
  <div
    class="d-flex flex-column flex-wrap justify-content-center align-items-start align-items-sm-center col-10"
  >
    <h1>The places you don't want to miss.</h1>
    <p>Discover and add your own reviews to your favorite activities in Denver</p>
    <a href="#category-section" class="btn btn-primary px-5 py-2">Let's get
      started!</a>
  </div>
</div>
<div class="container col-10 latest-reviews">
  <div class="d-flex justify-content-between mb-3">
    <h2>Latest Reviews</h2>
    <a href="" class="seeall"><p>See All</p></a>
  </div>
  <div class="container">
    <div class="d-flex flex-wrap justify-content-center col-12">
      {{#each reviews as |review|}}
        <div class="card col-12 col-lg-5 m-4">
          {{! <img src="..." class="card-img-top" alt="..." /> }}
          <div
            class="card-body d-flex flex-column flex-wrap justtify-content-center align-items-stretch"
          >
            <div class="d-flex">
              <div class="col-md-1 text-center me-2">
                <img
                  src="/images/user-img.png"
                  class="rounded-circle user-img"
                />
              </div>
              <div class="">
                <h6>{{user.username}}</h6>
              </div>
            </div>

            <h2 class="card-title text-center my-3">{{location.name}}</h2>
            <h5 class="card-location text-center">{{review.title}}</h5>
            <div class="stars text-center my-4"><span
                class="material-symbols-outlined stars-icons"
              >
                star star star star
              </span></div>
            <p class="card-text text-center">"{{review.text}}"</p>

            <a
              href="/api/location/one/{{location_id}}"
              class="btn btn-primary"
            >More {{location.name}} Experiences</a>
          </div>
        </div>

      {{/each}}

    </div>
  </div>
</div>
<div id="category-section" class="container my-5">
  <div class="d-flex flex-column justify-content-center col-12 select-category">
    <h2 class="text-center">Select a category to discover.</h2>
    <div
      class="col-12 d-flex flex-wrap justify-content-center align-items-center my-4"
    >
      <div
        class="category col-10 col-sm-10 col-md-3 d-flex justify-content-center align-items-center mx-3 my-2"
        style="cursor: pointer;"
        onclick="window.location='/api/location/1';"
      >
        <li class="m-0"> Adventure </li></div>
      <div
        class="category col-10 col-sm-10 col-md-3 d-flex justify-content-center align-items-center mx-3 my-2"
        style="cursor: pointer;"
        onclick="window.location='/api/location/2';"
      >
        <li class="m-0"> Entertainment </li></div>
      <div
        class="category col-10 col-sm-10 col-md-3 d-flex justify-content-center align-items-center mx-3 my-2"
        style="cursor: pointer;"
        onclick="window.location='/api/location/3';"
      >
        <li class="m-0"> Dining </li></div>

    </div>
    {{! <ul>
      <li class="category"> <a href="/api/location/1">Adventure</a></li>
      <li> <a href="/api/location/2">Entertainment</a></li>
      <li> <a href="/api/location/3">Dining</a></li>
    </ul> }}
  </div>
</div>