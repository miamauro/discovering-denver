<div class="container-fluid text-center bg-primary p-0 location-header">
  <img src="/public/images/{{filename}}" alt="..." />
</div>
<div class="d-flex justify-content-end rate-experience-btn">
  <a href="#" class="btn btn-primary">Rate experience</a>
</div>

<div class="container d-flex flex-wrap justify-content-center col-md-10 my-5">
  <div class="col-md-10">
    <h3>{{name}}</h3>
    <p>
      {{description}}
    </p>
    <p>Location: <span>{{address}}</span></p>
  </div>
  <div class="col-md-2">
    <div class="border border-1 col-8">
      <div class="d-flex text-center justify-content-center px-3">
        <h4>To Do: figure out how to pull average rating</h4>
        ⭐
      </div>
    </div>
  </div>
</div>
<div class="container col-md-10">
  <h2>Reviews:</h2>
</div>

{{#each reviews as |review|}}
  <div class="d-flex flex-wrap container mx-5 align-items-center col-md-7 my-5">
    <div class="col-md-2 text-center">
      <img src="../public/images/user-img.png" class="rounded-circle" />
    </div>
    <div class="col-md-8 review-text">
      <h3>{{review.title}}</h3>
      <p>
        {{review.text}}
      </p>
    </div>
    <div class="col-md-2 d-flex align-self-start rating-num">
      <h4 class="ms-2">{{review.rating}}</h4>
      ⭐
    </div>
  </div>
{{/each}}