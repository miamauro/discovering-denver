          {{! <img src="..." class="card-img-top" alt="..." /> }}
          <div
            class="card-body d-flex flex-column flex-wrap justtify-content-center align-items-stretch"
          >
            <div class="d-flex">
              <div class="col-md-1 text-center me-2">
                <img
                  src="/images/user-img.png"
                  class="rounded-circle user-img"
                />
              </div>
              <div class="">
                <h6>{{user.username}}</h6>

              </div>
            </div>
            
            <h2 class="card-title text-center my-3">{{review.title}}</h2>
            
              <div class="stars text-center"><span
                class="material-symbols-rounded stars-icons star-fill">
                {{review.filledStars}}</span>
              <span class="stars-empty material-symbols-rounded stars-icons">
                {{review.emptyStars}}</span>
            </div>

            
            <p class="card-text text-center">"{{review.text}}"</p>

          </div>
        </div>

      {{/each}}

    </div>
  </div>
